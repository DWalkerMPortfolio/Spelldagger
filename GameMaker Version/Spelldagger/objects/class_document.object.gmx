event_inherited()

//view text
if collected=false
    {
    //open document
    if interacted=true
        {
        displayText[interactPlayer.playerNumber]=!displayText[interactPlayer.playerNumber]
        read[interactPlayer.playerNumber]=true
        }
    
    for (var i=0; i&lt;array_length_1d(displayText); i++)
        {
        //close if menu is opened
        if obj_control.menuDisplay[i]=true
            displayText[i]=false
            
        //fade
        if displayText[i]=true
            textAlpha[i]+=0.05
        else
            textAlpha[i]-=0.05
        textAlpha[i]=clamp(textAlpha[i],0,1)
        
        //collect
        if type!="sign" and read[i]=true and textAlpha[i]&lt;=0
            {
            collected=true
            part_type_direction(obj_control.part_gust,0,360,7.5,0)
            part_emitter_burst(obj_control.sys_gust,emit_gust,obj_control.part_gust,20)
            part_emitter_destroy(obj_control.sys_gust,emit_gust)
            if title!="MISSING TITLE" and ds_list_find_index(obj_control.documentsCollectedList,title)=-1
                {
                ds_list_add(obj_control.documentsCollectedList,title)
                scr_message("Obtained "+title,i)
                }
            }
        }
    }
//collect animation
else
    {
    image_alpha-=0.1
    image_xscale+=0.05
    image_yscale+=0.05
    if image_alpha&lt;=0
        instance_destroy()
    }
